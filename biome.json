{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "**/*.{yml,yaml,mdx,md,svg,ico}",
      ".next/**",
      "node_modules/**",
      "public/**"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "nursery": {
        "noUnusedImports": "error"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
